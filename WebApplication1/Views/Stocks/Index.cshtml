@model WebApplication1.Models.StockListViewModel

@{
    ViewData["Title"] = "Stocks";
    string ToggleDir(string col)
    {
        if (Model.Sort == col)
        {
            return Model.SortDir == "asc" ? "desc" : "asc";
        }
        return "asc";
    }
    string SortIndicator(string col)
    {
        if (Model.Sort == col)
        {
            return Model.SortDir == "asc" ? " ¡ô" : " ¡õ";
        }
        return string.Empty;
    }
}

<h1>Stocks</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th><a href="?page=1&pageSize=@Model.PageSize&sort=Id&sortDir=@ToggleDir("Id")">Id</a></th>
            <th><a href="?page=1&pageSize=@Model.PageSize&sort=StockCode&sortDir=@ToggleDir("StockCode")">Symbol</a></th>
            <th><a href="?page=1&pageSize=@Model.PageSize&sort=StockName&sortDir=@ToggleDir("StockName")">Name</a></th>
            <th class="text-end"><a href="?page=1&pageSize=@Model.PageSize&sort=ClosingPrice&sortDir=@ToggleDir("ClosingPrice")">Price</a></th>
            <th><a href="?page=1&pageSize=@Model.PageSize&sort=CreatedAt&sortDir=@ToggleDir("CreatedAt")">UpdatedAt</a></th>
        </tr>
    </thead>
    <tbody>
@foreach (var s in Model.Stocks)
{
    <tr>
        <td>@s.Id</td>
        <td>@s.StockCode</td>
        <td>@s.StockName</td>
        <td class="text-end">@s.ClosingPrice</td>
        <td>@s.CreatedAt.ToString("g")</td>
    </tr>
}
    </tbody>
</table>

<div class="d-flex justify-content-between align-items-center">
    <div>Showing @((Model.Page - 1) * Model.PageSize + 1)-@(((Model.Page - 1) * Model.PageSize) + Model.Stocks.Count()) of @Model.TotalCount</div>
    <nav>
        <ul class="pagination mb-0">
            <li class="page-item @(Model.Page <= 1 ? "disabled" : "")">
                <a class="page-link" href="?page=@(Model.Page - 1)&pageSize=@Model.PageSize&sort=@Model.Sort&sortDir=@Model.SortDir">Previous</a>
            </li>
@{
    var totalPages = (int)Math.Ceiling(Model.TotalCount / (double)Model.PageSize);
    for (int i = 1; i <= totalPages; i++)
    {
        <li class="page-item @(i == Model.Page ? "active" : "")"><a class="page-link" href="?page=@i&pageSize=@Model.PageSize&sort=@Model.Sort&sortDir=@Model.SortDir">@i</a></li>
    }
}
            <li class="page-item @(Model.Page >= (int)Math.Ceiling(Model.TotalCount / (double)Model.PageSize) ? "disabled" : "")">
                <a class="page-link" href="?page=@(Model.Page + 1)&pageSize=@Model.PageSize&sort=@Model.Sort&sortDir=@Model.SortDir">Next</a>
            </li>
        </ul>
    </nav>
</div>
